{
    "name": "scaforchio/lampschool",
    "type": "project",
    "description": "Registro Elettronico per il sistema scolastico italiano.",
    "keywords": [
        "Registro Elettronico",
        "Italian Linux Society"
    ],
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Pietro Tamburrano",
            "role": "Author"
        },
        {
            "name": "Contributors",
            "homepage": "https://github.com/scaforchio/LAMPSchool/graphs/contributors",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.4",
        "phpunit/phpunit": "^5.7"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "target-directory": "tools"
        }
    },
    "autoload": {
        "psr-4": {
            "LampSchool\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LampSchool\\Tests\\": "tests/"
        }
    }
}
